@model List<DoAn_WebBanCayCanh_24DKTPM1A.Models.Order>
@{ ViewBag.Title = "Lịch sử mua hàng"; Layout = "~/Views/Shared/_TeraLayout.cshtml"; }
@Html.AntiForgeryToken()
<div class="container py-5">
    <h3 class="fw-bold text-success mb-4">LỊCH SỬ ĐƠN HÀNG CỦA BẠN</h3>

    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="#" class="list-group-item active">Đơn hàng của tôi</a>
                <a href="@Url.Action("Logout", "Account")" class="list-group-item text-danger">Đăng xuất</a>
            </div>
        </div>

        <div class="col-md-9">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-warning">Bạn chưa mua đơn hàng nào.</div>
            }
            else
            {
                <div class="table-responsive table-responsive-history">
                    <table class="table table-bordered mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#@item.Id</td>
                                    <td>@(item.CreatedDate.HasValue ? item.CreatedDate.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                                    <td class="text-danger fw-bold">@String.Format("{0:#,##0}", item.TotalAmount) đ</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@item.PaymentStatus</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
