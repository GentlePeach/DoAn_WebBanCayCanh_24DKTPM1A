
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_TeraLayout.cshtml";
}
@section Styles {
    <link href="~/Content/StyleContact.css" rel="stylesheet" />
}
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-success">Liên hệ với chúng tôi</h2>
        <p class="text-muted">Chúng tôi luôn sẵn sàng lắng nghe và tư vấn cho không gian xanh của bạn.</p>
    </div>

    <div class="row g-5">
        <div class="col-lg-6">
            <div class="contact-box h-100">
                <h4 class="mb-4 fw-bold">Gửi tin nhắn</h4>
                <form>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="name" placeholder="Họ tên">
                        <label for="name">Họ và tên</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" placeholder="Email">
                        <label for="email">Địa chỉ Email</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" placeholder="Nội dung" id="message" style="height: 150px"></textarea>
                        <label for="message">Nội dung cần tư vấn</label>
                    </div>
                    <button type="submit" class="btn-submit">Gửi ngay</button>
                </form>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="contact-box h-100">
                <h4 class="mb-4 fw-bold">Thông tin liên hệ</h4>
                <div class="d-flex align-items-center mb-4">
                    <div class="icon-box"><i class="fa-solid fa-location-dot"></i></div>
                    <div>
                        <h6 class="mb-0 fw-bold">Địa chỉ</h6>
                        <small class="text-muted">123 Đường Cây Xanh, Quận 1, TP.HCM</small>
                    </div>
                </div>
                <div class="rounded overflow-hidden shadow-sm mt-4">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.517!2d106.69!3d10.77!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTDCsDQ2JzEwLjAiTiAxMDbCsDQxJzM0LjAiRQ!5e0!3m2!1svi!2s!4v1" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

