@using PagedList.Mvc;
@using PagedList;
@model IPagedList<DoAn_WebBanCayCanh_24DKTPM1A.Models.Category>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/Admin_Products.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .pagination-container {
            text-align: right;
            margin-top: 20px;
        }

        .pagination {
            display: inline-flex;
            list-style: none;
        }

            .pagination li a, .pagination li span {
                padding: 6px 12px;
                border: 1px solid #ddd;
                margin: 2px;
                text-decoration: none;
                color: #333;
                border-radius: 4px;
            }

            .pagination .active span {
                background-color: #28a745;
                color: white;
                border-color: #28a745;
            }
    </style>
}

<div class="page-title">
    <i class="fa-solid fa-layer-group"></i> Quản lý danh mục
</div>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Thêm danh mục
    </a>
</p>

<div class="card-box">
    <table class="table table-hover table-admin">
        <thead>
            <tr>
                <th style="width:50px">ID</th>
                <th>Tên danh mục</th>
                <th>Alias (Link SEO)</th>
                <th style="width:150px">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">#@item.Id</td>
                    <td>
                        <strong style="color:#2c3e50; font-size:16px;">@item.Name</strong>
                    </td>
                    <td>
                        <span class="badge badge-light" style="background:#eee; color:#555; border:1px solid #ccc">@item.Alias</span>
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6" style="padding-top:20px;">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="col-md-6">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>