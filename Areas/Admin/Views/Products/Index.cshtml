@using PagedList.Mvc;
@using PagedList;
@model IPagedList<DoAn_WebBanCayCanh_24DKTPM1A.Models.Product>

@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@section Styles {
    <link href="~/Content/Admin_Products.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

}

<h2 class="page-title">
    <i class="fa-solid fa-boxes-stacked"></i> Quản lý sản phẩm
</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Thêm sản phẩm mới
    </a>
</p>

<div class="card-box">
    <table class="table table-hover table-admin">
        <thead>
            <tr>
                <th style="width:50px">STT</th>
                <th style="width:100px">Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá bán</th>
                <th>Kho</th>
                <th style="width:150px">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = (Model.PageNumber - 1) * Model.PageSize + 1; }

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@i</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="~/images/@item.Image" class="product-thumb" />
                        }
                        else
                        {
                            <span>Chưa có ảnh</span>
                        }
                    </td>
                    <td>
                        <strong>@item.Name</strong><br />
                        <small class="text-muted">(@item.Alias)</small>
                    </td>
                    <td>
                        @if (item.Category != null)
                        {
                            <span class="badge badge-category">@item.Category.Name</span>
                        }
                    </td>
                    <td>
                        <span class="text-price">@string.Format("{0:0,0}", item.Price) đ</span>
                        @if (item.PriceSale > 0)
                        {
                            <br />
                            <strike class="text-muted small">@string.Format("{0:0,0}", item.PriceSale) đ</strike>
                        }
                    </td>
                    <td>
                        @item.Quantity <br />
                        @if (item.Quantity > 0)
                        {
                            <span class="badge badge-success">Còn hàng</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Hết hàng</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6" style="padding-top:25px;">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        </div>
        <div class="col-md-6">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

</div>