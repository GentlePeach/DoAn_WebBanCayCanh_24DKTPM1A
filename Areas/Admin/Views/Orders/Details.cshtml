@model DoAn_WebBanCayCanh_24DKTPM1A.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@section Styles {
    <link href="~/Content/details_Oders.css" rel="stylesheet" />
}

<h3>Chi tiết sản phẩm trong đơn</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.Name</td>

                <td>
                    <img src="~/images/@item.Product.Image" width="50" />
                </td>

                <td>@item.Quantity</td>

                <td>@string.Format("{0:0,0}", item.Price) VNĐ</td>

                <td>@string.Format("{0:0,0}", item.Quantity * item.Price) VNĐ</td>
            </tr>
        }
    </tbody>
</table>

<div class="order-card">
    <h4 class="order-title">Thông tin đơn hàng</h4>
    <dl class="dl-horizontal order-info">
        <dt>Khách hàng:</dt>
        <dd>@Model.CustomerName</dd>

        <dt>Tổng tiền:</dt>
        <dd>@string.Format("{0:0,0}", Model.TotalAmount) VNĐ</dd>

        <dt>Trạng thái:</dt>
        <dd>@Model.Status</dd>

        <dt>Ngày tạo:</dt>
        <dd>@Model.CreatedDate</dd>

        <dt>SĐT:</dt>
        <dd>@Model.CustomerPhone</dd>

        <dt>Địa chỉ:</dt>
        <dd>@Model.CustomerAddress</dd>

        <dt>Email:</dt>
        <dd>@Model.CustomerEmail</dd>

        <dt>Ghi chú:</dt>
        <dd>@Model.Note</dd>

        <dt>Tài khoản đặt hàng:</dt>
        <dd>@Model.KhachHang?.HoTen</dd>
    </dl>
</div>

<p class="order-links">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn-green">✏ Chỉnh sửa</a>
    <a href="@Url.Action("Index")" class="btn-green">← Quay lại danh sách</a>
</p>
