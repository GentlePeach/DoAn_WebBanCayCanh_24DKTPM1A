@using PagedList.Mvc;
@model PagedList.IPagedList<DoAn_WebBanCayCanh_24DKTPM1A.Models.Product>

@{
    ViewBag.Title = "Kết quả tìm kiếm: " + ViewBag.Keyword;
    Layout = "~/Views/Shared/_TeraLayout.cshtml";
}

@section Styles {
    <link href="~/Content/StyleTera.css" rel="stylesheet" />
}

<div class="container mb-5 pt-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <h5 class="sidebar-title">Danh mục</h5>
            <ul class="list-group">
                <li class="list-group-item"><a href="@Url.Action("Tera", "Products")" class="text-decoration-none text-dark">Terrarium</a></li>
                <li class="list-group-item"><a href="@Url.Action("Aqua", "Products")" class="text-decoration-none text-dark">Thủy sinh</a></li>
            </ul>
        </div>

        <div class="col-lg-9">
            <h4 class="mb-4 text-success fw-bold">
                @if (string.IsNullOrEmpty(ViewBag.Keyword))
                {
                    <span>Tất cả sản phẩm</span>
                }
                else
                {
                    <span>Kết quả tìm kiếm cho: "@ViewBag.Keyword"</span>
                }
            </h4>

            @if (Model.Count == 0)
            {
                <div class="alert alert-warning text-center">
                    Không tìm thấy sản phẩm nào phù hợp!
                </div>
            }
            else
            {
                @Html.Partial("_TeraGrid", Model)
            }
        </div>
    </div>
</div>
