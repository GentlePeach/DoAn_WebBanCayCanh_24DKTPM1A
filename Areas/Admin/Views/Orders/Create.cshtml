@model DoAn_WebBanCayCanh_24DKTPM1A.Models.Order

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@section Styles {
    <link href="~/Content/create_Oders.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

<h2 class="page-title">
    <i class="fas fa-file-circle-plus"></i> Tạo đơn hàng & Thêm sản phẩm
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Thông tin khách hàng -->
    <div class="card-box card-green">
        <div class="section-title">
            <i class="fa-solid fa-user"></i> Thông tin khách hàng
        </div>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Khách hàng</label>
            @Html.DropDownList("MaKH", null, "--- Chọn khách hàng ---", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Địa chỉ giao hàng</label>
            @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group">
            <label>Ghi chú đơn hàng</label>
            @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <!-- Thông tin sản phẩm -->
    <div class="card-box">
        <div class="section-title">
            <i class="fa-solid fa-seedling"></i> Thông tin sản phẩm
        </div>
        <hr />

        <div class="form-group">
            <label>Chọn cây cảnh</label>
            @Html.DropDownList("ProductId", (SelectList)ViewBag.ProductId, "--- Chọn cây ---", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Số lượng</label>
            <input type="number" name="Quantity" value="1" min="1" class="form-control" />
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-check"></i> Hoàn tất đơn hàng
        </button>

        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
