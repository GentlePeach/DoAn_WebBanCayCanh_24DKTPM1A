@model DoAn_WebBanCayCanh_24DKTPM1A.Models.Product

@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@section Styles {
    <link href="~/Content/Admin_Products.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}
@section Scripts {
    <script>
        $(document).ready(function () {
            // Khi người dùng gõ vào ô Tên sản phẩm (Name)
            $("#Name").on("keyup", function () {
                var name = $(this).val();

                // Hàm chuyển đổi Tiếng Việt có dấu thành không dấu
                var alias = name.toLowerCase()
                    .normalize('NFD').replace(/[\u0300-\u036f]/g, '') // Bỏ dấu
                    .replace(/đ/g, 'd').replace(/Đ/g, 'd')             // Chuyển đ -> d
                    .replace(/[^a-z0-9 ]/g, '')                        // Bỏ ký tự đặc biệt
                    .replace(/\s+/g, '-');                             // Chuyển khoảng trắng thành dấu gạch ngang

                // Gán giá trị vào ô Alias
                $("#Alias").val(alias);
            });
        });
    </script>
}

<div class="page-title">
    <i class="glyphicon glyphicon-plus-sign"></i> Thêm sản phẩm mới
</div>

<div class="card-box">
    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-7">
                <h4 class="text-primary text-success" style="border-bottom:1px solid #eee; padding-bottom:10px; margin-bottom:20px;">
                    Thông tin cơ bản
                </h4>

                <div class="form-group">
                    <label class="control-label">Tên sản phẩm <span class="text-danger">*</span></label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ví dụ: Cây Xương Rồng Tai Thỏ" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">Alias (Link thân thiện)</label>
                    @Html.EditorFor(model => model.Alias, new { htmlAttributes = new { @class = "form-control", @placeholder = "cay-xuong-rong-tai-tho" } })
                    @Html.ValidationMessageFor(model => model.Alias, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">Danh mục</label>
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">Mô tả sản phẩm</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "5", @placeholder = "Nhập mô tả chi tiết sản phẩm..." })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-5">
                <h4 class="text-primary text-success" style="border-bottom:1px solid #eee; padding-bottom:10px; margin-bottom:20px;">
                    Thiết lập bán hàng
                </h4>

                <div class="form-group">
                    <label class="control-label">Hình ảnh đại diện</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    <small class="text-muted">Nên chọn ảnh vuông hoặc chữ nhật ngang (JPG, PNG)</small>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Giá gốc (VNĐ)</label>
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Giá khuyến mãi (VNĐ)</label>
                            @Html.EditorFor(model => model.PriceSale, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                            @Html.ValidationMessageFor(model => model.PriceSale, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Số lượng nhập kho</label>
                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @Value = "10" } })
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Kích thước (Size)</label>
                            @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control", @placeholder = "VD: Nhỏ, Vừa, Lớn" } })
                            @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="form-group text-right" style="margin-top:20px;">
            <a href="@Url.Action("Index")" class="btn btn-warning">
                <i class="glyphicon glyphicon-arrow-left"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="glyphicon glyphicon-floppy-disk"></i> Lưu sản phẩm
            </button>
        </div>
    }
</div>